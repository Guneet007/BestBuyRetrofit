<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/image"
        android:text="Name "
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/image_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_name"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/image"
        android:text="Date"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_name"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/image_release"
        android:text="|" />

    <TextView
        android:id="@+id/image_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_name"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/bar"
        android:text="Rating"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/image_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_release"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/image"
        android:text="Price"
        android:textColor="#000"
        android:textSize="17sp" />
</RelativeLayout>